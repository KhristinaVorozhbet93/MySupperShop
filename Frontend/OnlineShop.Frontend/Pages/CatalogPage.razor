@page "/catalog"
@using OnlineShop.Frontend.Components

@if (_products is null)
{
    <div>Страница загружается...</div>
    @if (_catalogLoading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    }
}
else
{
    <MudButton @onclick="ToIndexPage"
           Variant="Variant.Filled"
           Style="background-color: #6ec04a;color:white;font-size:13px;
        margin-top:20px;margin-right:10px;margin-bottom:30px;float:right">
        Выйти
    </MudButton>
    <MudDrawerHeader Class="text">Каталог продуктов</MudDrawerHeader>
    <MudButton @onclick="ToAddProductPage"
           Class="mb-4 ml-4" Style="background-color:#6ec04a;
        color:white;font-size:15px" EndIcon="@Icons.Material.Filled.Add">
        Добавить новый товар
    </MudButton>
    <MudGrid>
        @foreach (var product in _products)
        {
            <ProductItem Product="product" />
        }
    </MudGrid>
}



