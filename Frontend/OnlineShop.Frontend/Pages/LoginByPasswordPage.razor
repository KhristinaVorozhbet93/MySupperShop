@page "/account/login/password"
@using OnlineShop.Frontend.Components;
@inherits AppComponentBase

<EditForm Model="@_loginRequest" OnValidSubmit="ProcessLoginByPassword">
    <DataAnnotationsValidator />
    <MudDrawerHeader Style="font-weight:bold;font-size:22px;margin-left:300px;">
        Авторизация
    </MudDrawerHeader>
    <MudGrid Style="height:800px">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Введите логин"
                                  @bind-Value="_loginRequest.Login" For="@(() => _loginRequest.Login)" />
                    <MudTextField @bind-Value="_loginRequest.Password" Label="Введите пароль"
                                  Variant="Variant.Text" InputType="@PasswordInput" Adornment="Adornment.End"
                                  AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ShowPassword" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled"
                               Style="background-color:#6ec04a;color:white;" Class="ml-auto">
                        Отправить
                    </MudButton>
                </MudCardActions>
                <MudCardContent>
                    <MudTextField Label="Введите код"
                                  @bind-Value="_loginByCodeRequest.Code" For="@(() => _loginByCodeRequest.Code)" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton @onclick="ProcessLoginByCode" Variant="Variant.Filled"
                               Style="background-color:#6ec04a;color:white;float:right" Class="ml-auto">
                        Войти
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        @if (_loginInProgress)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        }
    </MudGrid>
</EditForm>