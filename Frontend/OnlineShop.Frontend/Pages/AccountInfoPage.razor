@page "/account"
@using OnlineShop.Frontend.Components;
@inherits AppComponentBase


<MudGrid>
    @*<MudImage Src="@model.Image" Height="400" Width="400" 
    Style="border: 2px solid black; margin:20px; background-color: white; float: left"/>
*@
    <MudGrid 
        Style="display: flex; border: 2px solid black; margin: 20px; float: right; width: 600px; height:400px; background-color: white">
        <MudCard Style="height: 395px;  width: 595px; position:relative">
            <MudCardContent Style="min-height:100px;">
                <MudText Style="padding-left:15px" Class="textwhite" Typo="Typo.subtitle1">
                    Логин:
                    @model.Login
                </MudText>
                <MudText Style="padding-left:15px" Class="textsilver" Typo="Typo.subtitle1">
                    Почта:
                    @model.Email
                </MudText>
                <MudText Style="padding-left:15px" Class="textsilver" Typo="Typo.subtitle1">
                    Имя:
                    @model.Name
                </MudText>
                <MudText Style="padding-left:15px" Class="textsilver" Typo="Typo.subtitle1">
                    Фамилия:
                    @model.LastName
                </MudText>
            </MudCardContent>
            <MudButton @onclick= "ToAccountEditorPage" Style="position:absolute; bottom:10px; background-color:#6ec04a; margin-left: 10px; color: white">
                Редактировать
            </MudButton>
        </MudCard>
    </MudGrid>
</MudGrid>
